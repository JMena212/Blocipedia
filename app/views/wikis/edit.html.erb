<%= form_for @wiki do |f| %>
   <div class="form-group">
     <%= f.text_field :title, class: 'form-control', placeholder: "Title" %>
   </div>
   <div class="form-group">
     <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Body" %>
   </div>
   <div class="form-group">
     <%= f.submit "Update", class: 'btn btn-success' %>
   </div>
<% end %>

<h4>Add Collaborators</h4>

<% @users.each do |user| %>
   <p> <%= user.email %> </p>
   <% if @wiki.users.include?(user) %>
     <%= link_to 'Remove Collaborator', collaboration_path(user_id: user.id, wiki_id: @wiki.id), method: :delete, class: 'btn btn-warning'%>
    <% else %>
     <%= link_to 'Add Collaborator', collaborations_path(user_id: user.id, wiki_id: @wiki.id), method: :post, class: 'btn btn-success'%>
    <% end %>
<%end%>